<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="481.0" prefWidth="834.0" stylesheets="@estilos.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.MenuPrincipalControle">
  <children>
    <!-- Barra de Menu -->
    <MenuBar styleClass="txt18" VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="Animais">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#cadastrarAnimal" text="Novo" />
            <MenuItem mnemonicParsing="false" onAction="#alterarAnimal" text="Alterar" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Usuários">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#cadastrarUsuario" text="Novo" />
            <MenuItem mnemonicParsing="false" onAction="#gerenciarUsuario" text="Alterar" />
            <MenuItem mnemonicParsing="false" onAction="#abrirTelaLogin" text="Login" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Produção">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#registrarProducao" text="Registrar" />
            <MenuItem mnemonicParsing="false" onAction="#consultarProducaoPeriodo" text="Listar por período" />
            <MenuItem mnemonicParsing="false" onAction="#consultarProducaoAnimal" text="Listar por animal" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Sair">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#sair" text="Fechar" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane VBox.vgrow="ALWAYS" />
  </children>
</VBox>
